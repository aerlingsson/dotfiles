[user]
	email = ahe@in-commodities.com
	name = ahe-incom
	signingkey = /Users/aerlingsson/.ssh/incom-github-sign.pub
[push]
	default = current
[alias]
	tree = log --oneline --decorate --graph --color --all
	ltree = log --oneline --decorate --graph --color
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[url "git@github.com:"]
	insteadOf = https://github.com/
[gpg]
	format = ssh
[commit]
	gpgsign = true
[init]
	defaultBranch = main
